
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Load jQuery -->
    <script src="http://code.jquery.com/jquery-2.1.0.min.js"></script>

    <!-- Load Leaflet -->
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    
    <style>
      /*
       * Make the sidebar appear above the map, to the right.
       */
      .sidebar {
        background: white;
        display: none;
        position: absolute;
        right: 15px;
        padding: 25px;
        top: 15px;
        width: 1000px;
        z-index: 5000;
      }
    </style>

    <script>
      /*
       * Keep the map variable out here so we can access it from
       * the console.
       */
      var map;

      $(document).ready(function () {
        map = L.map('map').setView([40.70, -73.96], 11);
        
        // Hide sidebar when map is clicked
        map.on('click', function () {
          $('.sidebar').hide();
        });

        L.tileLayer('http://tile.stamen.com/toner/{z}/{x}/{y}.png', {
          maxZoom: 18,
        }).addTo(map);
        
        $.getJSON('https://thenewschool.cartodb.com/u/dracybbenc/api/v2/viz/51ff2156-1864-11e6-b56a-0ecd1babdde5/viz.json', function (data) {
          L.geoJson(data, {
            
            /*
             * Instead of adding a popup, put data in sidebar and show it.
             */
            onEachFeature: function (feature, layer) {
              layer.on('click', function () {
                $('.sidebar').html('name: ' + feature.properties.name).show();
              });
            }
          }).addTo(map);
        })
      });
    </script>
  </head>
  <body>
    <div id="map"></div>
    <div class="sidebar"></div>
  </body>
</html>
